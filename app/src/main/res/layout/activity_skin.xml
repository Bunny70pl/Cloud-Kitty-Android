    <ImageButton
        android:id="@+id/btn_white"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/cat_white"
        android:layout_marginBottom="20dp"
        android:background="@null"/>

    <ImageButton
        android:id="@+id/btn_black"
        android:layout_width="200dp"
        android:layout_height="200dp"
